!!!
%html
  %head
    = stylesheet_link_tag 'application', :media => :all
    = javascript_include_tag :defaults
    %title #{h current_account.subdomain}.houndapp.com
  %body
    = render :partial => 'shared/header'
    #main_content
      .container_12
        .grid_12{ :id => 'page_heading' }
          %h2
            = yield(:page_heading)
        .clear
        .grid_12
          #flash
            - flash.each do |severity, message|
              %p{:class => severity}= message
        .clear
        .grid_3
          = render :partial => 'shared/domain_navigation', :locals => { :domain => @domain }
        .grid_9
          = yield
        .clear
    = render :partial => 'shared/footer'
