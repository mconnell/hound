!!!
%html
  %head
    = stylesheet_link_tag 'application', :media => :all
    = javascript_include_tag :defaults
  %body
    #header
      .container_12
        .grid_6
          %h1
            Hound
        .grid_6
          %ul
            - if current_user.present?
              %li
                = link_to 'My Profile', '#'
              %li
                = link_to 'Account Settings', '#'
              %li
                = link_to 'Logout', user_session_path, :method => :delete
            - else
              %li
                = link_to 'Login', new_user_session_path
        .clear
    #main_navigation
      .container_12
        .grid_12
          %ul
            %li
              = link_to 'Dashboard', root_path
            %li
              = link_to 'Link two', '#'
            %li
              = link_to 'Link three', '#'
        .clear
    #main_content
      .container_12
        .grid_12
          #flash
            - flash.each do |severity, message|
              %p{:class => severity}= message
        .clear

        = yield
