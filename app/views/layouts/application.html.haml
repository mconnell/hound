!!!
%html
  %head
    = stylesheet_link_tag 'application', :media => :all
    = javascript_include_tag :defaults
  %body
    #header
      .container_12
        .grid_6
          %h1
            = link_to "#{h(current_subdomain.subdomain)}.houndapp.com", root_url
        .grid_6
          %ul
            - if current_user.present?
              %li= link_to 'Account Settings', account_settings_path
              %li= link_to 'Logout', user_session_path, :method => :delete
            - else
              %li= link_to 'Login', new_user_session_path
        .clear
    - if current_user.present?
      #main_navigation
        .container_12
          .grid_12
            %ul
              = navigation_li_link_to('Dashboard', root_path)
              = navigation_li_link_to('Domains', '#')
          .clear
    #main_content
      .container_12
        .grid_12{ :id => 'page_heading' }
          %h2
            = yield(:page_heading)
        .clear
        .grid_12
          #flash
            - flash.each do |severity, message|
              %p{:class => severity}= message
        .clear
        = yield
